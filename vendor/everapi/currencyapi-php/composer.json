{
    "name": "everapi/currencyapi-php",
    "description": "A PHP wrapper for the currencyapi.com API",
    "keywords": [
        "currencyapi.com",
        "currencyapi-php",
        "currency",
        "api",
        "currencyapi",
        "currency conversion",
        "currency converter",
        "currency data",
        "exchange rates"
    ],
    "homepage": "https://github.com/everapihq/currencyapi-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Clemens Ehrenreich",
            "email": "clemens@everapi.com",
            "role": "Developer"
        },
        {
            "name": "Lukas Struber",
            "email": "lukas.struber@everapi.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "CurrencyApi\\CurrencyApi\\": "src"
        }
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
